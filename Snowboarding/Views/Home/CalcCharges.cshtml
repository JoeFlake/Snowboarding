@{
    ViewData["Title"] = "Charges Calculation";
}
<h1>Calculate Charges</h1>
<br /><br />
<h4>Get a quote for tutoring</h4>
<br /><br />
<div class="charges-container">
    <label for="hours">How many hours will you need?</label>
    <input type="number" id="hours" name="hours" min="0" required />
</div>
<br />
<div class="charges-container">
    <label for="charge">Hourly rate:</label>
    <input type="text" id="charge" value="100" readonly>
</div>
<br />
<button id="calcBtn"> Calculate Total</button>
<br /><br />
<div class="charges-container">
    <label for="total">Total:</label>
    <input type="text" id="total" readonly />
</div>
<script src="~\js\site.js"></script>